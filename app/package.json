{
  "name": "aincrad-launcher",
  "private": true,
  "version": "0.0.0",
  "description": "A modern game launcher built with Electron and React for AincradOT",
  "homepage": "https://github.com/AincradOT/launcher",
  "author": {
    "name": "AincradOT",
    "email": "contact@aincradot.com"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:renderer && npm run build:electron && npm run package",
    "build:all": "npm run build:renderer && npm run build:electron && npm run package:all",
    "build:renderer": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "package": "electron-builder",
    "package:win": "electron-builder --win nsis --publish=always",
    "package:linux": "electron-builder --linux --publish=always",
    "package:all": "electron-builder --linux --win nsis --publish=always",
    "lint": "tsc --noEmit && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\" \"electron/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\" \"electron/**/*.{ts,js}\"",
    "type-check": "tsc --noEmit && tsc --noEmit -p tsconfig.electron.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "preview": "vite preview",
    "prepare": "husky",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "clean": "rimraf dist dist-electron node_modules/.cache",
    "clean:all": "rimraf dist dist-electron node_modules"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "electron-updater": "^6.3.9",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semver": "^7.7.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@testing-library/react": "^14.3.1",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.3.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.0.11",
    "jsdom": "^24.1.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.6.1"
  },
  "main": "dist-electron/main.js",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run lint:fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "electron": {
      "fsevents": "~2.3.3"
    }
  },
  "resolutions": {
    "electron": "^30.0.1"
  }
}
